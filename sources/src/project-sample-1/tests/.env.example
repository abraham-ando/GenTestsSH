# ============================================
# Configuration LLM - Choisir UNE option
# ============================================

# OPTION 1: LM Studio (Local Model - RECOMMANDÉ pour éviter les coûts)
# Lancez LM Studio, chargez votre modèle, puis activez le serveur local
OPENAI_API_KEY=lm-studio
OPENAI_MODEL=openai/gpt-oss-20b
OPENAI_BASE_URL=http://localhost:1234/v1

# OPTION 2: OpenAI API (Cloud - nécessite clé API payante)
# OPENAI_API_KEY=sk-your-real-api-key-here
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_BASE_URL=https://api.openai.com/v1

# OPTION 3: Anthropic Claude (Alternative cloud)
# ANTHROPIC_API_KEY=your-anthropic-key-here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# LLM Provider (openai or anthropic)
LLM_PROVIDER=openai

# Auto-Heal Configuration
AUTO_COMMIT=true
AUTO_PR=false
CONFIDENCE_THRESHOLD=0.7
MAX_RETRIES=3

# Playwright Configuration
HEADLESS=true
SLOW_MO=0
TIMEOUT=30000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/auto-heal.log

